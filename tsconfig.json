{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "lib": [
          "ESNext"
        ],
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": "./src",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "rootDir": "./"
      },
      "include": ["src/**/*"],
      "exclude": [
        "node_modules",
        "**/*.test.ts"
      ]
}